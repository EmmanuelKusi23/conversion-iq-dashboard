# Conversion IQ Dashboard - Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# ================================
# Database Configuration
# ================================
DATABASE_URL="postgresql://user:password@localhost:5432/conversion_iq"

# ================================
# Authentication (OAuth2)
# ================================
NEXTAUTH_SECRET="generate-a-random-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Microsoft OAuth (optional)
AZURE_AD_CLIENT_ID="your-azure-ad-client-id"
AZURE_AD_CLIENT_SECRET="your-azure-ad-client-secret"
AZURE_AD_TENANT_ID="your-azure-ad-tenant-id"

# ================================
# Payment Gateway - Flutterwave
# ================================
FLUTTERWAVE_PUBLIC_KEY="FLWPUBK-xxxxxxxxxxxxx"
FLUTTERWAVE_SECRET_KEY="FLWSECK-xxxxxxxxxxxxx"
FLUTTERWAVE_ENCRYPTION_KEY="FLWSECK_TESTxxxxxxxxx"

# Alternative: Hubtel
HUBTEL_CLIENT_ID="your-hubtel-client-id"
HUBTEL_CLIENT_SECRET="your-hubtel-client-secret"

# ================================
# Advertising Platforms
# ================================
# Meta (Facebook/Instagram) Ads
META_ADS_ACCESS_TOKEN="your-meta-ads-access-token"
META_ADS_ACCOUNT_ID="act_xxxxxxxxxxxxx"
META_APP_ID="your-facebook-app-id"
META_APP_SECRET="your-facebook-app-secret"

# Google Ads
GOOGLE_ADS_DEVELOPER_TOKEN="your-google-ads-developer-token"
GOOGLE_ADS_CLIENT_ID="your-google-ads-client-id"
GOOGLE_ADS_CLIENT_SECRET="your-google-ads-client-secret"
GOOGLE_ADS_REFRESH_TOKEN="your-google-ads-refresh-token"
GOOGLE_ADS_CUSTOMER_ID="xxx-xxx-xxxx"

# TikTok Ads
TIKTOK_ADS_ACCESS_TOKEN="your-tiktok-ads-access-token"
TIKTOK_ADS_APP_ID="your-tiktok-app-id"
TIKTOK_ADS_SECRET="your-tiktok-app-secret"
TIKTOK_ADVERTISER_ID="your-advertiser-id"

# ================================
# Analytics & Attribution
# ================================
# Firebase
FIREBASE_API_KEY="your-firebase-api-key"
FIREBASE_AUTH_DOMAIN="your-project.firebaseapp.com"
FIREBASE_PROJECT_ID="your-project-id"
FIREBASE_STORAGE_BUCKET="your-project.appspot.com"
FIREBASE_MESSAGING_SENDER_ID="xxxxxxxxxxxxx"
FIREBASE_APP_ID="1:xxxx:web:xxxx"

# AppsFlyer
APPSFLYER_API_TOKEN="your-appsflyer-api-token"
APPSFLYER_APP_ID="your-app-id"

# Google Analytics
GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# ================================
# Data Warehouse
# ================================
# BigQuery
BIGQUERY_PROJECT_ID="your-bigquery-project-id"
BIGQUERY_DATASET_ID="conversion_iq"
BIGQUERY_CLIENT_EMAIL="your-service-account@project.iam.gserviceaccount.com"
BIGQUERY_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_KEY_HERE\n-----END PRIVATE KEY-----\n"

# ================================
# Communication
# ================================
# WhatsApp Business API
WHATSAPP_BUSINESS_TOKEN="your-whatsapp-business-token"
WHATSAPP_PHONE_NUMBER_ID="xxxxxxxxxxxxx"
WHATSAPP_BUSINESS_ACCOUNT_ID="xxxxxxxxxxxxx"

# Slack
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/xxx/xxx/xxx"
SLACK_BOT_TOKEN="xoxb-xxxxxxxxxxxxx"

# Email (SendGrid)
SENDGRID_API_KEY="SG.xxxxxxxxxxxxx"
FROM_EMAIL="noreply@conversion-iq.com"

# ================================
# Task Management
# ================================
# ClickUp
CLICKUP_API_TOKEN="your-clickup-api-token"
CLICKUP_TEAM_ID="xxxxxxxxxxxxx"

# Notion (optional)
NOTION_API_KEY="secret_xxxxxxxxxxxxx"
NOTION_DATABASE_ID="xxxxxxxxxxxxx"

# Trello (optional)
TRELLO_API_KEY="your-trello-api-key"
TRELLO_TOKEN="your-trello-token"

# ================================
# Accounting Software
# ================================
# Zoho Books
ZOHO_CLIENT_ID="your-zoho-client-id"
ZOHO_CLIENT_SECRET="your-zoho-client-secret"
ZOHO_REFRESH_TOKEN="your-zoho-refresh-token"
ZOHO_ORGANIZATION_ID="xxxxxxxxxxxxx"

# QuickBooks (optional)
QUICKBOOKS_CLIENT_ID="your-quickbooks-client-id"
QUICKBOOKS_CLIENT_SECRET="your-quickbooks-client-secret"
QUICKBOOKS_REFRESH_TOKEN="your-quickbooks-refresh-token"
QUICKBOOKS_REALM_ID="xxxxxxxxxxxxx"

# ================================
# Ghana-Specific Services
# ================================
# GRA (Ghana Revenue Authority) API
GRA_TIN="your-company-tin"
GRA_API_KEY="your-gra-api-key"

# SSNIT Integration
SSNIT_EMPLOYER_NUMBER="your-ssnit-number"

# ================================
# Security & Monitoring
# ================================
# API Rate Limiting
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_WINDOW_MS="900000"

# Sentry Error Tracking (optional)
SENTRY_DSN="https://xxxxxxxxxxxxx@sentry.io/xxxxxxxxxxxxx"

# ================================
# Application Settings
# ================================
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:3000/api"

# Feature Flags
ENABLE_ANALYTICS_AGENT="true"
ENABLE_PAYMENTS="true"
ENABLE_WHATSAPP_NOTIFICATIONS="false"
